def bonjour():
  print("Bonjour")
  continuer=input("Est-ce que vous voulez continuez ?")
  valid=is_answer_valid(continuer)
  while not valid:
      print("Veuillez r√©pondre par oui(o) ou par non(n)")
      continuer=input("Est-ce que vous voulez continuez ?")
      valid=is_answer_valid(continuer)
  if continuer=="o":
     bonjour()
  else:
      print("Au revoir")

def is_answer_valid(answer):
  if answer in ["o","n"]:
     valid=True
  else:
     valid=False
  return valid
if __name__=="__main__":
    bonjour()
